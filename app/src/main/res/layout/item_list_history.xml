<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bg_number" />

        <TextView
            android:id="@+id/tvLesson"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Đề 1"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvHistory"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/imgIcon"
            android:ellipsize="marquee"
            android:gravity="bottom"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:singleLine="true"
            android:text="Làm bài lúc 19:50:20 Ngày 20/11/2019"
            android:textColor="#2196F3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tvHistory"
            android:layout_toEndOf="@+id/imgIcon"
            android:paddingStart="10dp"
            android:text="Điểm 9/10 - Thời gian làm 20:50s"
            android:textColor="#000"
            android:textSize="14sp" />
    </RelativeLayout>

    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/clickHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</androidx.cardview.widget.CardView>