<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Kết quả kiểm tra" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pointer" />

        <TextView
            android:id="@+id/tvPointer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="6/10"
            android:textColor="#FF0054"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPoint"
            android:background="@drawable/bg_pointer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/bg_review"
                android:id="@+id/tvReview"
                android:textColor="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Xem lại"
                android:textSize="16sp" />

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/tvNext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_submit"
                android:gravity="center"
                android:text="Làm tiếp"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>