<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:windowSoftInputMode="stateAlwaysHidden">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutCauHoi"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/layoutNumber"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cauhoi_2">

                <TextView
                    android:id="@+id/tvRequest"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvQuestion"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvCauHoi"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="1 + 1= ?"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imgQuestion"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/cau1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutDapAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutCauHoi">

                <LinearLayout
                    android:id="@+id/lnAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout

                        android:id="@+id/lnA"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_answer">

                        <TextView
                            android:id="@+id/tvAnswerA"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:text="A"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvBodyA"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tvAnswerA"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imgCheckA"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_false"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnB"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_answer">


                        <TextView
                            android:id="@+id/tvAnswerB"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:text="B"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvBodyB"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tvAnswerB"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imgCheckB"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_false"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnC"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_answer">


                        <TextView
                            android:id="@+id/tvAnswerC"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:text="C"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvBodyC"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tvAnswerC"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imgCheckC"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_false"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnD"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_answer">

                        <TextView
                            android:id="@+id/tvAnswerD"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:text="D"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvBodyD"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tvAnswerD"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imgCheckD"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_false"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="50dp"
                    android:id="@+id/writeAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/lnWrite"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_answer"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/edtWriteAnswer"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@null"
                            android:hint="Điền đáp án..."
                            android:textColor="#000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <Button
                        android:layout_marginStart="20dp"
                        android:id="@+id/btnCheckAnswer"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@+id/lnWrite"
                        android:background="@drawable/bg_button_check"
                        android:text="Đồng ý"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>